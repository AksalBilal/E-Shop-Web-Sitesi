@model Noktalı_Virgül.Models.ViewModels.AddUserViewModel
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <form action="/Login/AddUser" method="post">
                    <div class="signup-form">
                        @using (Html.BeginForm("AddUser", "Login", FormMethod.Post))
                        {

                            @Html.AntiForgeryToken()

                            <!--sign up form-->
                            <h2>Kayıt Ol</h2>
                            <div id="SignUp">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Ad" })
                                    @Html.ValidationMessageFor(m => m.Ad)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control", placeholder = "Soyad" })
                                    @Html.ValidationMessageFor(m => m.Soyad)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.SifreDogrulama, new { @class = "form-control", placeholder = "Şifre Doğrulama" })
                                    @Html.ValidationMessageFor(m => m.SifreDogrulama)
                                </div>

                                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                            </div>
                        }
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>